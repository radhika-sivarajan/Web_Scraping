{{#each data}}
<div class="col-md-6">
    <ul class="collapsible" data-collapsible="accordion">
        <li>
            <div class="collapsible-header news-title"> {{this.title}} </div>
            <div class="collapsible-body news-body">
                <div class="pull-left news-image">
                    <img class="img-thumbnail" src="{{this.image}}" alt="BBC image">
                </div>
                <div class="news-summary text-center">
                    <p class="news-snippet">{{this.summary}} </p>
                    <i>Full news 
                        <a href="{{this.link}}" target="_blank">Go to website</a> <br>OR 
                        <a href="{{this.link}}" target="popup"  onclick="window.open('{{this.link}}','popup','width=600,height=600'); return false;">Open in a popup window</a>
                    </i>
                </div>
            </div>
        </li>
        <li>
            <div class="collapsible-header news-comment"><span class="glyphicon glyphicon-plus-sign"></span> Add comment</div>
            <div class="collapsible-body">
                <form id="form-add-{{this._id}}" action="add/comment/{{this._id}}" method="post">
                    <div class="row">
                        <div class="input-field col s8 offset-s2">
                            <input id="user-name" name="userName" type="text" class="validate">
                            <label for="user-name">Your Name:</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s8 offset-s2">
                            <textarea id="comment-box" name="userComment" class="materialize-textarea"></textarea>
                            <label for="comment-box">Comment:</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s8 offset-s2">
                            <center><input class="btn" data-id="{{this._id}}" type="submit" value="Submit"></center>
                        </div>
                    </div>
                </form>
            </div>
        </li>
        <li>
            <div class="collapsible-header news-comment"><span class="glyphicon glyphicon-eye-open"></span> Show comments</div>
            <div class="collapsible-body">
                {{#if this.comments}}
                <ul class="collection">
                    {{#each this.comments}}
                    <li class="collection-item">
                        <b>{{this.username}}</b>
                        <div class="row">
                            <div class="col-md-10">{{this.message}}</div>
                            <div class="col-md-2">
                                <form id="form-delete-{{this._id}}" action="delete/comment/{{this._id}}" method="post"> <input class="btn btn-small delete-comment-button" data-id="{{this._id}}" type="submit" value="Delete">
                                </form>
                            </div>
                        </div>
                    </li>
                    {{/each}}
                </ul>
                {{else}}
                <p>No comments yet !!!</p>
                {{/if}}
            </div>
        </li>
    </ul>
</div>
{{/each}}