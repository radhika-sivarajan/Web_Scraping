<div class="container ">
    <div class="row text-center">
        <h1>BBC News</h1>
        <h3> Science & Environment</h3>
    </div>
    {{#each data}}
    <div class="row">
        <div class="col-md-2">
            <img src="{{this.image}}" alt="BBC image">
        </div>
        <div class="col-md-6">
            <h4>{{this.title}}</h4>
            <p>{{this.summary}}</p>
            <p>{{this.link}}</p>
        </div>
        <div class="col-md-4">
        </div>
    </div>
    {{/each}}
    <footer class="row text-center">
        <p> Copyright &copy; Radhika Sivarajan</p>
    </footer>
</div>